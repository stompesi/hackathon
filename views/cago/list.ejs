<body style="background: #eee;">
  <%- include('../common/header.ejs') %>
  <div class="conetents">
    <div class="login-text">배차 정보 확인</div>
    
    <div class="gargo-info-section">
      <div class="list-title-section">
        <div class="cago-info">화물정보</div>
        <div class="up-down-info">상하차 정보</div>
        <div class="time-info">신청 시간</div>
        <div class="car-number-info">배차차량</div>
        <div class="size-info">적재량</div>
        <div class="cost-info">운임료</div>
        <div class="detail">자세히보기</div>
      </div>

      <% for (const cago of cagos) { %>
        <div class="cago-section">
          <div class="cago-info">
            <% if(cago.status == 0) { %>
              <span class="cago-request">&nbsp;</span><span>요청중</span><br>
            <% } else if(cago.status == 1) { %>
              <span class="cago-delivery"></span><span>배송중</span><br>
            <% } else if(cago.status == 2) { %>
              <span class="cago-reservation"></span><span>예약중</span><br>
            <% } else if(cago.status == 3) { %>
              <span class="cago-complte"></span><span>배송완료</span><br>
            <% } %>
            <span>NO.<%=cago.seq%></span><br>
          </div>
          <div class="up-down-info">
            <div class="img">
              <img src="/img/ic-arrow.png">
            </div>
            <div class="text">
              <span></span><span><%=cago.startPoint%></span><br>
              <span><%=cago.destinationPoint%></span><br>
            </div>
          </div>
          <div class="time-info">
            <span><%=cago.created.toLocaleDateString("ko-KR", {year: '2-digit', month: '2-digit',day: '2-digit'})%></span>
          </div>
          <div class="car-number-info">
            <span><%=cago.carModel%></span>
          </div>
          <div class="size-info">
            <span><%=cago.wishCarry%></span>
          </div>
          <div class="cost-info">
            <span><%=cago.cost%></span>원
          </div>
          <div class="detail">
            <a href="/cago/vendor/<%=cago.seq%>">자세히보기><a>
          </div>
        </div>
      <% } %>
      
